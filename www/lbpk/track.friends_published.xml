<?xml version="1.0" encoding="UTF-8"?>
<resource name="track.friends_published">
  <request method="GET" url="api/v1/track.friends_published.xml" login_required="true">
    <param name="platform" type="string" required="false" options="PS3,WEB"/>
    <param name="filters[username]" type="array" required="true"/>
  </request>
  <response name="response" type="anchor">
    <element name="player_creations" type="anchor">
      <attribute name="friends_published" type="boolean"/>
    </element>
  </response>
</resource>
